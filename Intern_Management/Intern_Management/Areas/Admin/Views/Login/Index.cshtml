@model Intern_Management.Areas.Admin.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
   @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {   
        @Html.ValidationSummary(false, "", "error");

        <label>UserName: </label>
        @Html.TextBoxFor(model => Model.UserName, new { @class = "username", });<br />
        <label>Password: </label>
        @Html.PasswordFor(model => Model.Password, new { @class = "password" });<br/>
        <button type="submit" class="btnLogin">Login</button>
        <label>Remember me</label>
             @Html.CheckBoxFor(model=>Model.Remember,new { @class="rememberme"})
        
    }
       
   
</body>
</html>
